.container {
	display: flex;
	flex-direction: column;
	min-height: 100vh;
	background: #f6f7fa;
  }
  
  .list-page {
	flex: 1 1 auto;
	min-height: 0;
	display: flex;
	flex-direction: column;
	/* 底部安全区+10rpx间距 */
	padding-bottom: calc(10rpx + env(safe-area-inset-bottom));
	box-sizing: border-box;
  }
  
  .list-section {
	flex: 1 1 auto;
	min-height: 0;
	display: flex;
	flex-direction: column;
  }
  
  .scroll-container {
	flex: 1 1 auto;
	min-height: 0;
	width: 100%;
	box-sizing: border-box;
	padding: 0 10rpx;
	/* 切记不要写 height/70vh/100vh 等！ */
  }
  
