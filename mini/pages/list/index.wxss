.intro-section {
	padding: 12rpx 0 0 0;
	background: #f7fafd;
	border-bottom: 1px solid #e6eaf0;
}

.compact-intro {
	padding: 6rpx 0 0 0;
}

.intro-content {
	margin: 0 30rpx 0 30rpx;
	padding: 18rpx 24rpx 10rpx 24rpx;
	border-radius: 0 0 18rpx 18rpx;
	background: #fff;
	box-shadow: 0 3rpx 12rpx #f1f2f6;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
}

.intro-title {
	font-size: 32rpx;
	font-weight: 700;
	color: #3256a8;
	margin-bottom: 4rpx;
	letter-spacing: 2rpx;
}

.intro-desc {
	font-size: 24rpx;
	color: #606e89;
	line-height: 1.7;
}



.list-title-bar {
	display: flex;
	align-items: center;
	margin: 0 30rpx 4rpx 30rpx;
	height: 44rpx;
}

.list-title {
	font-size: 28rpx;
	color: #5d7bb2;
	font-weight: 600;
	letter-spacing: 1rpx;
}

.list-divider {
	flex: 1;
	margin-left: 18rpx;
	border-bottom: 1px dashed #e1e7ee;
	height: 0;
}



.weui-cells {
	margin: 0;
}

.art-card {
	display: flex;
	justify-content: space-between;
	align-items: center;
	background: #fff;
	border-radius: 14rpx;
	box-shadow: 0 4rpx 12rpx #e6ecfd;
	margin: 0 0 14rpx 0;
	padding: 20rpx 24rpx;
	transition: box-shadow 0.15s, background 0.15s;
	cursor: pointer;
}

.art-card-hover {
	box-shadow: 0 8rpx 24rpx #d5e3f7;
	background: #f3f8ff;
}

.art-card-main {
	flex: 1;
	min-width: 0;
}

.art-title {
	font-size: 30rpx;
	color: #333;
	font-weight: 700;
	margin-bottom: 4rpx;
	word-break: break-all;
}

.art-meta {
	display: flex;
	align-items: center;
	font-size: 22rpx;
	color: #888;
}

.art-badge {
	display: inline-block;
	background: linear-gradient(90deg, #4e8cff 0%, #6fc0ff 100%);
	color: #fff;
	border-radius: 8rpx;
	padding: 2rpx 12rpx;
	margin-right: 14rpx;
	font-size: 20rpx;
	font-weight: 500;
	letter-spacing: 1rpx;
}

.art-label {
	color: #b5b5b5;
	font-size: 20rpx;
}

.art-right-arrow {
	width: 16rpx;
	height: 16rpx;
	border-right: 3rpx solid #b5b5b5;
	border-bottom: 3rpx solid #b5b5b5;
	transform: rotate(-45deg);
	margin-left: 16rpx;
}

.empty-state {
	text-align: center;
	margin: 60rpx 0 40rpx 0;
	color: #999;
	font-size: 26rpx;
	line-height: 1.8;
}

.load-tip {
	width: 100%;
	text-align: center;
	margin: 18rpx 0 10rpx 0;
}

.weui-loadmore {
	display: flex;
	align-items: center;
	justify-content: center;
	color: #888;
	font-size: 24rpx;
}

.weui-loadmore__tips {
	margin-left: 8rpx;
}

.weui-loadmore_line {
	border-top: 1px solid #eee;
	padding-top: 14rpx;
}

