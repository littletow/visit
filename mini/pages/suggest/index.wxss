.page-container {
	padding: 40rpx 24rpx 24rpx 24rpx;
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	background: linear-gradient(135deg, #e9f0ff 0%, #fafffd 100%);
	box-sizing: border-box;
  }
  
  .suggest-title {
	font-size: 36rpx;
	font-weight: 700;
	color: #2073fa;
	margin-bottom: 18rpx;
	letter-spacing: 2rpx;
	text-align: center;
  }
  
  .suggest-desc {
	font-size: 24rpx;
	color: #5d6d7e;
	margin-bottom: 32rpx;
	text-align: center;
	line-height: 1.6;
  }
  
  .content {
	background: #fff;
	border-radius: 20rpx;
	box-shadow: 0 4rpx 16rpx #e0eaff;
	padding: 36rpx 26rpx 26rpx 26rpx;
	margin-bottom: 32rpx;
	flex: 1 1 auto;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
  }
  
  .content text {
	display: block;
	margin-bottom: 14rpx;
	font-size: 26rpx;
	color: #244879;
  }
  
  .form-label {
	font-size: 24rpx;
	color: #2073fa;
	margin-bottom: 8rpx;
	font-weight: 600;
	display: block;
  }
  
  .input-box,
  .textarea-box {
	width: 100%;
	border: 1.5rpx solid #d6e4ff;
	background: #f5faff;
	border-radius: 12rpx;
	padding: 18rpx 20rpx;
	font-size: 26rpx;
	color: #244879;
	margin-bottom: 22rpx;
  }
  
  .input-box:focus,
  .textarea-box:focus {
	border-color: #2073fa;
	background: #f0f8ff;
  }
  
  .textarea-box {
	min-height: 140rpx;
	resize: vertical;
  }
  
  .btn-container {
	padding: 0 0 48rpx 0;
	margin-top: 24rpx;
	text-align: center;
  }
  
  .weui-btn {
	width: 80%;
	border-radius: 18rpx;
	font-size: 30rpx;
	font-weight: 700;
	background: linear-gradient(90deg, #4e8cff 0%, #2073fa 100%);
	color: #fff;
	box-shadow: 0 2rpx 10rpx #cddafc;
	padding: 0 0;
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 auto;
	letter-spacing: 2rpx;
	transition: background 0.3s;
  }
  
  .weui-btn:active {
	background: linear-gradient(90deg, #2073fa 0%, #4e8cff 100%);
  }
  
  ::placeholder {
	color: #b1b8c7;
	font-size: 24rpx;
  }