}

.weui-cell_example .weui-cell__hd image {
  width: 20px;
  height: 20px;
  display: block;
  margin-right: 16px
}

.view-contact {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  padding: 0 15rpx; /* 卡片整体离左右边框各45px */
}

.card {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8px 10px; /* 调整卡片内边距 */
  max-width: 400px; /* 最大宽度 */
  background-color: #ffffff;
  /* border-radius: 8px; */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.left-content {
  width: 80px;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px; /* 左侧内容离左边框10px */
}

.icon-button {
  background: none;
  border: none;
  padding: 0;
}

.icon {
  width: 68px; /* 设置图标宽度 */
  height: 68px; /* 设置图标高度 */
}

.right-content {
  display: flex;
  flex-direction: column;
  flex-grow: 1; /* 右侧内容占满剩余空间 */
  padding-left: 12px; /* 右侧内容左侧内边距 */
  margin-right: 10px; /* 右侧内容离右边框10px */
  overflow: hidden; /* 防止溢出 */
}

.contact-button {
  background: none;
  border: none;
  padding: 0;
  color: #007aff;
  font-size: 16px;
  margin-bottom: 4px; /* 调整联系我按钮下边距 */
  text-align: left; /* 左对齐 */
  white-space: nowrap; /* 防止按钮文本换行 */
  overflow: hidden;
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}

.contact-button:active {
  color: #005bb5; /* 点击时文本颜色 */
}

.support-text {
  color: #999999;
  font-size: 14px;
  text-align: left; /* 左对齐 */
  word-wrap: break-word; /* 自动换行 */
}