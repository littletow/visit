page {
  background-color: #f4f4f4;
  color: #333333;
  font-family: Arial, sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  min-height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.page-title {
  font-size: 24px;
  margin-bottom: 20px;
  color: #333333;
}

/* 按钮样式 */
.button {
  width: 200px;
  padding: 10px 20px;
  margin: 10px 0;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  text-align: center;
  cursor: pointer;
  transition: background-color 0.3s;
}

.button-primary {
  background-color: #4CAF50;
  color: white;
}

.button-primary:hover {
  background-color: #45a049;
}

.button-secondary {
  background-color: #2196F3;
  color: white;
}

.button-secondary:hover {
  background-color: #1e88e5;
}

.button-disabled {
  background-color: #cccccc;
  color: #666666;
}


.weui-cells {
  margin: 15rpx;
}

.button-sp-area {
  padding-top: 30rpx;
  text-align: center;
}

.weui-btn_mini {
  margin-right: 8rpx;
}

.placeholder {
  margin-top: 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
  text-align: center;
  background-color: var(--weui-BG-2);
  height: 2.3em;
  line-height: 2.3em;
  /* color: var(--weui-FG-1) */
}

.placeholder-hover {
  background-color: var(--weui-BG-0);
}

.weui-footer_fixed-bottom {
  margin-bottom: 10rpx;
  padding-bottom: 32rpx;
}

.home-ad {
  margin-bottom: 0;
  position: fixed;
  width: 220rpx;
  height: 220rpx;
  bottom: 220rpx;
  right: 20rpx;
  display: block;
  box-sizing: border-box;
}

.view-ad {
  margin-left: 45rpx;
  margin-right: 45rpx;
}


.line {
  background: #E0E3DA;
  width: 100%;
  height: 10rpx;
}

.weui-cell_example .weui-cell__hd image {
  width: 20px;
  height: 20px;
  display: block;
  margin-right: 16px
}