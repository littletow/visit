page,
.page-bg {
  width: 100vw;
  min-height: 100vh;
  background: linear-gradient(135deg, #e9f0ff 0%, #fafffd 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

/* 主内容区 */
.main-content {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24rpx 24rpx 0 24rpx;
  min-height: 82vh;
}

/* 搜索区 */
.search-section-m {
  margin-top: 34rpx;      /* 向下更多一点 */
  margin-bottom: 24rpx;
}
.search-bar-m {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 34rpx;
  box-shadow: 0 2rpx 8rpx #e0eaff;
  padding: 0 26rpx;
  height: 68rpx;
}
.search-icon-m {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.search-input-m {
  flex: 1;
  border: none;
  outline: none;
  background: transparent;
  height: 48rpx;
  font-size: 32rpx;
  color: #333;
}
.search-btn-m {
  margin-left: 16rpx;
  color: #fff;
  background: linear-gradient(90deg, #4e8cff 0%, #2073fa 100%);
  font-size: 32rpx;
  font-weight: 500;
  padding: 0 22rpx;
  border-radius: 22rpx;
  height: 46rpx;
  display: flex;
  align-items: center;
}

/* 功能区 */
.function-section-m {
  margin-bottom: 20rpx;
  padding: 20rpx 10rpx 8rpx 10rpx;
  border-radius: 20rpx;
  background: #fff;
}
.func-btn-grid-m {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx 16rpx;
}
.func-btn-m {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 18rpx;
  background: #f5f8ff;
  box-shadow: 0 1rpx 4rpx #e0eaff;
  padding: 20rpx 0 12rpx 0;
  height: 110rpx;
}
.func-btn-icon-m {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}
.func-btn-name-m {
  font-size: 32rpx;
  color: #2073fa;
  font-weight: 700;
}

/* 介绍区 */
.intro-section-m {
  margin-bottom: 18rpx;
  padding: 22rpx 16rpx 14rpx 16rpx;
  border-radius: 18rpx;
  background: #f7faff;
}
.intro-title-m {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c4e8a;
  margin-bottom: 6rpx;
}
.intro-desc-m {
  font-size: 28rpx;
  color: #667ca3;
  line-height: 1.7;
}

/* 开发者寄语 */
.dev-msg-section {
  display: flex;
  align-items: center;
  background: #f6fffc;
  border-radius: 16rpx;
  padding: 16rpx 16rpx;
  margin-bottom: 18rpx;
}
.dev-msg-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 12rpx;
}
.dev-msg-content {
  flex: 1;
}
.dev-msg-title {
  font-size: 30rpx;
  color: #2073fa;
  font-weight: 700;
}
.dev-msg-desc {
  font-size: 26rpx;
  color: #6a849a;
}

/* 工具栏 */
.tools-section-m {
  margin-bottom: 32rpx;   /* 增加下部间隙 */
  border-radius: 16rpx;
  background: #fff;
  padding: 12rpx 0;
  box-shadow: 0 1rpx 4rpx #e9eaff;
}
.tool-bar-m {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tool-item-m {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2rpx 0;
  flex: 1;
}
.tool-icon-m {
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 6rpx;
}
.tool-label-m {
  font-size: 26rpx;
  color: #2073fa;
  font-weight: 600;
}

/* 广告区 */
.banner-section-m {
  border-radius: 12rpx;
  background: #fff;
  min-height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 1rpx 4rpx #e9eaff;
  margin-bottom: 10rpx;
}
.banner-section-m ad-custom {
  width: 100%;
}

/* 卡片阴影 */
.card-shadow-m {
  box-shadow: 0 1rpx 4rpx #f0f2f7;
}

/* 页脚栏 */
.footer-bar {
  font-size: 22rpx;
  color: #b2b2b2;
  text-align: center;
  padding: 14rpx 0 calc(38rpx + env(safe-area-inset-bottom)) 0;
  background: transparent;
  letter-spacing: 1rpx;
}