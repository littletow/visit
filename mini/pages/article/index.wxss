.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #e9f0ff 0%, #fafffd 100%);
  color: #2d3a4b;
  font-family: "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}
.page__bd {
  max-width: 760rpx;
  margin: 0 auto;
  padding: 32rpx 16rpx 0 16rpx;
  box-sizing: border-box;
}

/* loading 动画美化 */
.loading {
  width: 100%;
  min-height: 120rpx;
  position: fixed;
  top: 36%;
  left: 0;
  color: #2073fa;
  font-size: 32rpx;
  text-align: center;
  z-index: 10;
}
.loading__icon {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 12rpx;
  animation: spin 1.2s linear infinite;
}
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* towxml 渲染内容美化 */
.towxml {
  color: #2d3a4b;
  font-size: 30rpx;
  line-height: 1.7;
  word-break: break-word;
}

.towxml p,
.towxml div,
.towxml span,
.towxml li,
.towxml ul,
.towxml ol,
.towxml strong,
.towxml em,
.towxml b,
.towxml i,
.towxml blockquote,
.towxml pre,
.towxml code,
.towxml h1,
.towxml h2,
.towxml h3,
.towxml h4,
.towxml h5,
.towxml h6 {
  color: #2d3a4b;
  font-size: 30rpx;
  line-height: 1.7;
  word-break: break-word;
}

.towxml h1,
.towxml h2,
.towxml h3,
.towxml h4,
.towxml h5,
.towxml h6 {
  color: #2073fa;
  font-weight: 700;
  margin: 28rpx 0 16rpx 0;
}

.towxml p {
  margin: 16rpx 0;
}

.towxml blockquote {
  background: #f5faff;
  border-left: 8rpx solid #2073fa;
  margin: 18rpx 0;
  padding: 18rpx 24rpx;
  color: #496490;
  border-radius: 14rpx;
}

.towxml ul, .towxml ol {
  margin-left: 32rpx;
  padding-left: 0;
}

.towxml pre,
.towxml code {
  background: #f0f6fb;
  color: #1a2959;
  border-radius: 10rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  margin: 10rpx 0;
  font-family: "Fira Mono", "Consolas", monospace;
  overflow-x: auto;
}

.towxml img {
  max-width: 100%;
  border-radius: 10rpx;
  margin: 14rpx 0;
  box-shadow: 0 2rpx 12rpx #e0eaff;
}

.towxml a {
  color: #2073fa;
  text-decoration: underline;
  word-break: break-all;
}

/* 增加分割线美化 */
.towxml hr {
  border: none;
  border-top: 2rpx dashed #b2cfff;
  margin: 18rpx 0;
}

/* 页脚美化 */
.weui-footer {
  margin: 36rpx 0 0 0;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  text-align: center;
  color: #b2b2b2;
  font-size: 26rpx;
  letter-spacing: 1rpx;
}
.weui-footer__text {
  background: #f5faff;
  display: inline-block;
  padding: 8rpx 36rpx;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 12rpx #e0eaff;
  font-size: 24rpx;
  color: #6a849a;
}

/* 兼容广告容器 */
ad {
  display: block;
  margin: 28rpx auto;
  width: 90%;
  min-height: 60rpx;
}