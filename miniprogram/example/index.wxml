<!--example/index.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">Golang</view>
    <view class="page__desc">欢迎参观Go编程语言，该导览涵盖了该语言最重要的功能。</view>
  </view>
  <view class="page__bd page__bd_spacing">
    <view class="kind-list">
      <block wx:for="{{list}}" wx:key="id">
        <view class="kind-list__item">
          <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
            <view class="weui-flex__item">{{item.name}}</view>
            <image class="kind-list__img" src="images/icon_nav_{{item.id}}.png"></image>
          </view>
          <view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
            <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
              <block wx:for="{{item.pages}}" wx:for-item="page" wx:key="id">
                <navigator url="{{page.id}}/{{page.id}}" class="weui-cell weui-cell_access">
                  <view class="weui-cell__bd">{{page.name}}</view>
                  <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
              </block>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
  <view class="page__ft">
    <view class="weui-footer">

      <view class="weui-footer__text">email:422964429@qq.com</view>
    </view>


  </view>
</view>