<view class="page">
  <view class="page__hd">
    <view class="page__title">使用说明</view>
    <view class="page__desc">可以通过搜索诗人、诗句查找完整唐诗！</view>
  </view>
  <view class="page__bd">

    <!-- 搜索框-->
    <view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
      <form class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <i class="weui-icon-search"></i>
          <input type="text" confirm-type="search" class="weui-search-bar__input" placeholder="请输入您要查找的内容" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm="search" />
        </view>
        <label class="weui-search-bar__label" bindtap="showInput">
          <i class="weui-icon-search"></i>
          <span class="weui-search-bar__text">搜索</span>
        </label>
      </form>
      <view class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
    </view>
    <!-- 内容-->
    <!--循环输出-->
    <view class="weui-cells weui-cells_after-title">
      <block wx:for="{{artList}}" wx:key="uuid">
        <view aria-labelledby="js_cell_l1_bd " aria-describedby="js_cell_l1_note" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="jump" data-guid="{{item.uuid}}" data-stars="{{item.views}}">
          <view class="weui-cell__bd" id="js_cell_l1_bd" aria-hidden="true">
            <view>{{item.title}}</view>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access" aria-hidden="true">
            <text wx:if="{{ item.createdTime > yestTime }}" id="js_cell_l1_note" aria-label="，有更新" class="weui-badge weui-badge_dot">新</text>
            <!-- <text wx:elif="{{ item.updatedTime > item.createdTime }}" id="js_cell_l1_note" aria-label="，有更新" class="weui-badge weui-badge_dot">修</text> -->
            <text wx:elif="{{ item.views > 100 }}" id="js_cell_l1_note" aria-label="，有更新" class="weui-badge weui-badge_dot">热</text>
          </view>
        </view>
      </block>
    </view>
    <!--循环输出-->

    
  </view>
  <view class="page__ft" wx:if="{{artList.length == 0 }}">
    <!-- <ad unit-id="adunit-97d05ae09a0a545a" ad-type="video" ad-theme="white"></ad> -->
    <ad unit-id="adunit-62a65ad78c1b3f40"></ad>
  </view>
</view>