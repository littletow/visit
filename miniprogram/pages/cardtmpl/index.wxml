<!--pages/cardtmpl/index.wxml-->
<view class="page">
    <!-- 卡片模板列表 -->
    <view class="page__hd">
        <view class="page__title">卡片模板列表</view>
        <view class="page__desc">应用卡片模板将消耗1个点数，卡片模板的作者将获得1个点数奖励。</view>
    </view>
    <view class="page__bd">
        <view class="weui-flex">
            <view class="weui-flex__item">
                <view class="placeholder" id="btnHot" bindtap="bindBtn">最火</view>
            </view>
            <view class="weui-flex__item">
                <view class="placeholder" id="btnNew" bindtap="bindBtn">最新</view>
            </view>
        </view>
        <view class="weui-cells">
            <block wx:for="{{cardTmplList}}" wx:key="id">
                <view aria-labelledby="js_cell_l1_bd " aria-describedby="js_cell_l1_note" class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="jump" data-idx="{{index}}">
                    <view class="weui-cell__bd" id="js_cell_l1_bd" aria-hidden="true">
                        <image style="width: 300px; height: 200px; background-color: #eeeeee;" mode="aspectFit" src="{{item.url}}"></image>

                        <view class="weui-cell__desc">采用：{{item.weight}}</view>
                    </view>
                    <view class="weui-cell__ft weui-cell__ft_in-access" aria-hidden="true"></view>
                </view>
            </block>
        </view>
        <view class="ad" wx:if="{{cardTmplList.length==0}}">
            <ad-custom unit-id="adunit-f1282577b2219b04"></ad-custom>
        </view>
    </view>
</view>