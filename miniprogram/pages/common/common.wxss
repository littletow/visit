/* example/common/common.wxss */
/**基础风格样式**/
@import '../../towxml/style/main.wxss';
/**如果页面有动态主题切换，则需要将使用到的样式全部引入**/
/**主题配色（浅色样式）**/
@import '../../towxml/style/theme/light.wxss';
/**主题配色（深色样式）**/
@import '../../towxml/style/theme/dark.wxss';

/**app.wxss**/
.loading {
  width:100%;
  height:100rpx;
  position:absolute;
  top:50%;
  color:#666;
  font-size:32rpx;
  font-family:Arial, Helvetica, sans-serif;
  margin-top:-200rpx;
  text-align:center;
}

.loading__icon {
  width:80rpx;
  height:80rpx;
}