<view class="page">
  <view class="weui-form">
    <view class="weui-form__bd">
      <view class="weui-form__text-area">
        <h2 class="weui-form__title">看广告获奖励</h2>
        <view class="weui-form__desc">看广告将获得10个豆子点数奖励。</view>
      </view>
      <view class="weui-form__control-area">
        <view class="weui-cells__group weui-cells__group_form">
          <view class="weui-cells">
            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">我的可用点数：{{myWalletInfo.points}}</view>
                </view>
              </view>
            </view>
            
            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">消耗使用点数：{{myWalletInfo.usePoints}}</view>
                </view>
              </view>
            </view>

            <!-- <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">文章获得点数：{{myWalletInfo.artProfit}}</view>
                </view>
              </view>
            </view> -->
           
            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">广告获得点数：{{myWalletInfo.adProfit}}</view>
                </view>
              </view>
            </view>

            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">推荐获得点数：{{myWalletInfo.shareProfit}}</view>
                </view>
              </view>
            </view>

            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">模板获得点数：{{myWalletInfo.cardProfit}}</view>
                </view>
              </view>
            </view>
           
            <!-- <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">系统补偿点数：{{myWalletInfo.sysaPoints}}</view>
                </view>
              </view>
            </view>
            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">系统扣减点数：{{myWalletInfo.sysdPoints}}</view>
                </view>
              </view>
            </view> -->
            <view class="weui-cell">
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view class="info">最近更新时间：{{myWalletInfo.updateTime}}</view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-form__ft">
      <view class="weui-form__opr-area">
        <view class="weui-btn weui-btn_default" aria-role="button" bind:tap="getMyStatInfo">刷新</view>
        <view class="weui-btn weui-btn_primary" aria-role="button" bind:tap="playAd">看广告</view>
      </view>
    </view>
  </view>
</view>